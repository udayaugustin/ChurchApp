<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Church.Stories">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Title" Text="{Binding StoryItem.Title}"/>
            <Label Text="Content"/>
            <Editor Text="{Binding StoryItem.Content}" HeightRequest="250" />
            <Button Text="Submit" Command="{Binding SubmitCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>